<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userProfileDetail"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/user"
        android:layout_gravity="center"
        android:id="@+id/img1"

        ></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=" Ali Khan"
        android:textSize="40dp"
        android:textStyle="bold"
        android:id="@+id/nameId"
        ></TextView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hayatabad, Peshawar"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/locationId"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donor"
        android:textColor="@color/purple_700"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/statusId"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="O+"
        android:textColor="@color/purple_700"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/bloodId"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="30dp"

        ></TextView>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I'am from Hayatabad,Peshawar and I am willing to donate blood to the needy people,
You can contact me!"
        android:id="@+id/messageId"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Contact Number:"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textSize="20dp"
        android:text="59595995"
        android:id="@+id/numberId"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Post Request"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:onClick="viewAllPost"
        />


</LinearLayout>